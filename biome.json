{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off",
				"noUnknownAtRules": "off"
			}
		}
	},
	"assist": {
		"enabled": true
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/*.generated.js",
			"!**/out",
			"!**/dist",
			"!tests/**/*.css",
			"!examples/**/*.css",
			"!.claude",
			"!packages/core/src/data/*.json"
		]
	}
}
