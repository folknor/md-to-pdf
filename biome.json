{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noAssignInExpressions": "off"
			}
		}
	},
	"assist": {
		"enabled": true
	},
	"files": {
		"includes": ["**", "!**/*.generated.js", "!!**/dist"]
	}
}
