{
  "name": "@mdforge/core",
  "version": "1.0.0",
  "description": "Core library for mdforge - Convert Markdown to PDF",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    },
    "./prepare": {
      "types": "./dist/lib/prepare.d.ts",
      "default": "./dist/lib/prepare.js"
    },
    "./errors": {
      "types": "./dist/lib/errors.d.ts",
      "default": "./dist/lib/errors.js"
    },
    "./conversion-info": {
      "types": "./dist/lib/conversion-info.d.ts",
      "default": "./dist/lib/conversion-info.js"
    },
    "./fonts": {
      "types": "./dist/lib/fonts.d.ts",
      "default": "./dist/lib/fonts.js"
    },
    "./includes": {
      "types": "./dist/lib/includes.d.ts",
      "default": "./dist/lib/includes.js"
    },
    "./util": {
      "types": "./dist/lib/util.d.ts",
      "default": "./dist/lib/util.js"
    }
  },
  "files": [
    "/dist",
    "/themes",
    "/src/data"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "node scripts/generate-google-fonts-list.js",
    "build": "tsc",
    "postbuild": "cp -r src/data dist/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mdforge/pdf": "workspace:*",
    "font-list": "^2.0.2",
    "github-slugger": "^2.0.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "marked-footnote": "^1.4.0",
    "marked-highlight": "^2.2.3",
    "marked-linkify-it": "^3.1.14",
    "marked-smartypants": "^1.1.11",
    "postcss": "^8.5.6",
    "transliteration": "^2.6.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/linkify-it": "^5.0.0",
    "google-font-metadata": "^6.0.8",
    "puppeteer": "^24.36.1",
    "typescript": "5.9.3"
  },
  "license": "MIT"
}
